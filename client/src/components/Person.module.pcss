.root {
  border: 10px solid rgb(0, 0, 0);
  border-radius: 10px;
  margin: 1em 0;
  padding: 1em;
  display: flex;
  flex-basis: 100%;
  justify-items: flex-end;
  justify-content: flex-end;
}

.name {
  flex-basis: 100%;
}

.info {
  flex-basis: 50%;
  display: flex;
  flex-direction: column;
}

.male {
  background-color: rgb(200, 200, 255);
}

.female {
  background-color: rgb(255, 200, 200);
}

.actions {
  margin-top: 1em;
}
